{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.scattered_enderman.main": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [
            "animation.scattered_enderman.idle",
            "animation.scattered_enderman.look"
          ],
          "transitions": [
            { "walking": "query.is_moving" },
            { "staring": "query.is_looking_at_target" },
            { "screaming": "query.is_angry" },
            { "carrying": "query.is_carrying_block" },
            { "attacking": "query.is_attacking" },
            { "dead": "query.health <= 0" }
          ]
        },
        "walking": {
          "animations": [
            "animation.scattered_enderman.walk",
            "animation.scattered_enderman.look"
          ],
          "transitions": [
            { "default": "!query.is_moving" },
            { "staring": "query.is_looking_at_target" },
            { "screaming": "query.is_angry" },
            { "carrying": "query.is_carrying_block" },
            { "attacking": "query.is_attacking" },
            { "dead": "query.health <= 0" }
          ]
        },
        "staring": {
          "animations": [
            "animation.scattered_enderman.stare"
          ],
          "transitions": [
            { "screaming": "query.is_angry" },
            { "default": "!query.is_looking_at_target" },
            { "dead": "query.health <= 0" }
          ]
        },
        "screaming": {
          "animations": [
            "animation.scattered_enderman.scream",
            "animation.scattered_enderman.shake"
          ],
          "transitions": [
            { "attacking": "query.is_attacking" },
            { "default": "!query.is_angry" },
            { "dead": "query.health <= 0" }
          ]
        },
        "carrying": {
          "animations": [
            "animation.scattered_enderman.carry_block",
            "animation.scattered_enderman.hold_block_idle"
          ],
          "transitions": [
            { "default": "!query.is_carrying_block" },
            { "attacking": "query.is_attacking" },
            { "dead": "query.health <= 0" }
          ]
        },
        "attacking": {
          "animations": [
            "animation.scattered_enderman.attack"
          ],
          "transitions": [
            { "default": "!query.is_attacking" },
            { "dead": "query.health <= 0" }
          ]
        },
        "teleporting": {
          "animations": [
            "animation.scattered_enderman.teleport"
          ],
          "transitions": [
            { "vanishing": "query.anim_time >= 0.2" }
          ]
        },
        "vanishing": {
          "animations": [
            "animation.scattered_enderman.vanish"
          ],
          "transitions": [
            { "appearing": "query.anim_time >= 0.9" }
          ]
        },
        "appearing": {
          "animations": [
            "animation.scattered_enderman.appear"
          ],
          "transitions": [
            { "default": "query.anim_time >= 0.9" }
          ]
        },
        "dead": {
          "animations": [
            "animation.scattered_enderman.death"
          ]
        }
      }
    }
  }
}
